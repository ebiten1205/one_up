<% if flash[:notice] %>
	<div class="alert alert-danger text-center">
			<%= flash[:notice] %>
	</div>
<% end %>
<div class="container">
    <div class="row">
        <div class="col-lg-5">
            <h3><%= @customer.name%>さんの会員情報編集</h3>
        </div>
    </div>

<%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
  <label for="inputName">会員ID</label>
  <%= @customer.id %>
  <br>
  <label for="inputName">氏名</label>
  <%= f.text_field :last_name, autofocus: true, id:"inputName", placeholder:"(姓)"%>
  <%= f.text_field :first_name, autofocus: true, id:"inputName", placeholder:"(名)"%>
  <br>
  <label for="inputName">フリガナ</label>
  <%= f.text_field :last_name_kana, autofocus: true, placeholder:"(セイ)"%>
  <%= f.text_field :first_name_kana, autofocus: true, placeholder:"(メイ)"%>
  <br>
  <label for="inputName">メールアドレス</label>
  <%= f.text_field :email, autofocus: true, placeholder:"メールアドレス"%>
  <br>
  <%= f.submit "変更を保存" %>
  <% end %>
</div>
</div>