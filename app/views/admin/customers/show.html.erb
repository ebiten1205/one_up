<% if flash[:notice] %>
    <div class="alert alert-success text-center">
    <%= flash[:notice] %>
    </div>
<% end %>
<div class="container">
    <div class="row">
        <div class="col-lg-4">
            <h3><%= @customer.name %>さんの会員情報</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            <table class="admin_show_customer">
                <tr class="active">
                    <th>会員ID</th>
                    <td><%= @customer.id %></td>
                </tr>
                <tr>
                    <th>氏名</th>
                    <td><%= @customer.last_name %> <%= @customer.first_name %></td>
                </tr>
                <tr>
                    <th>フリガナ</th>
                    <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
                </tr>
                <tr>
                    <th>メールアドレス</th>
                    <td><%= @customer.email %></td>
                </tr>
                <tr>
                    <th>会員ステータス</th>
                    <td>
                            <% if @customer.is_deleted == true %>
                                退会
                            <% else %>
                                有効
                            <% end %>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-1">
            <%= link_to "編集する", edit_admin_customer_path, class: "btn btn-info" %>
        </div>
    </div>
</div>