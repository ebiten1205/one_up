<main>
 <div>
  <%= flash[:notice] %>
 </div>
 <div class="container">
   <div class="row">
     <div class="col-md-3">
     </div>
     <div class="col-md-8 offset-md-1">
       <h2>投稿詳細</h2>
       <table class="table">
         <tbody>
           <tr>
             <td>
               <% link_to customer_path(@post.customer.id) do %>
               <%= image_tag @post.customer.get_profile_image(80,80) %>
               <% end %>
               <br>
               <%= link_to @post.customer.name, customer_path(@post.customer.id) %>
             </td>
             <td>
               <%= @post.content %>
             </td>
             <td>
               <%= @post.place %>
             </td>
             <td>
              <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
              <%= @post.likes.count %>いいね
             </td>
             <td>
             <%= link_to "削除する", admin_post_path(@post.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
             </td>
           </tr>
         </tbody>
       </table>
     </div>
   </div>
 </div>
</main>

 <p>コメント件数：<%= @post.post_comments.count %></p>
  <% @post.post_comments.each do |post_comment| %>
    <p><%= image_tag post_comment.customer.get_profile_image(100,100) %></p>
    <%= post_comment.customer.name %>
    <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.content %>
  <% end %>