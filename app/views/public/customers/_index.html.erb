<table class='table'>
  <thead>
    <tr>
      <th>画像</th>
      <th>名前(姓)</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= image_tag customer.get_profile_image(50,50) %></td>
        <td><%= customer.last_name %><% customer.first_name %></td>
        <td><%= render "public/relationships/btn", customer: customer %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>