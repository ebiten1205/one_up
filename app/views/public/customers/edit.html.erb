<div>
  <%= flash[:notice] %>
</div>
<h1>会員情報編集</h1>

<%= form_with model: @customer,url: customer_path, method: :patch  do |f| %>
  
  <div class="field">
    <label for="inputImage">プロフィール画像</label>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  </div>

  <div class="field">
    <%= f.label "(姓)" %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div>
  
  <div class="field">
    <%= f.label "(名)" %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>
  
  <div class="field">
    <%= f.label "(セイ)" %><br />
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
  </div>
  
  <div class="field">
    <%= f.label "(メイ)" %><br />
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
    <%= f.submit "編集内容を保存" %>
    <%= link_to "退会する", customers_unsubscribe_path %>
<% end %>