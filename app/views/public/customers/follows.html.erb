<h2>Follows</h2>
  <table class='table'>
    <thead>
      <tr>
        <th>Image</th>
        <th>name</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td>
            <%= link_to customer_path(customer) do %>
              <%= image_tag customer.get_profile_image(50,50) %>
            <% end %>
          </td>
          <td><%= customer.name %></td>
          <td>
            <%= link_to follows_customer_path(customer) do %>
              <h6>フォロー<%= customer.followers.count %></h6>
            <% end %>
          </td>
          <td>  
            <%= link_to followers_customer_path(customer) do %>
              <h6>フォロワー<%= customer.follows.count %></h6>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>