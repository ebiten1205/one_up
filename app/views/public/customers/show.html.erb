<div class="container">
    <div class="row">
        <div class="col-lg-4">
            <h3>マイページ</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-2">
            <h4>登録情報</h4>
        </div>
        <div class="col-lg-1">
                <%= link_to "編集する", edit_customer_path, class: "btn btn-info"%>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-9">
            <table class="table table-bordered">
                <tr>
                    <th class="col-lg-2 active">プロフィール画像</th>
                    <td><%= image_tag @customer.get_profile_image(100,100) %></td>
                </tr>
                <tr>
                    <th class="col-lg-2 active">氏名</th>
                    <td><%= @customer.last_name %> <%= @customer.first_name %></td>
                </tr>
                <tr>
                    <th class="col-lg-2 active">カナ</th>
                    <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
                </tr>
                <tr>
                    <th class="col-lg-2 active">メールアドレス</th>
                    <td><%= @customer.email %></td>
                </tr>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-2">
            <h4>注文履歴</h4>
        </div>
        <div class="col-lg-1">
            <div class="link_index">
                <%#= link_to "一覧を見る", orders_path, class: "btn btn-info" %>
            </div>
        </div>
    </div>
</div>

<% @customer.posts.each do |post| %>
  <p><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>
<% end %>