<table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>投稿内容</th>
            <th>実施場所</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% posts.each do |post| %>
          <tr>
            <td>
             <%= link_to customer_path(post.customer.id) do %>
             <%= image_tag post.customer.get_profile_image(80, 80) %>
             <% end %> 
            </td>
            <td>
             <%= link_to post.content, post_path(post) %>
            </td>
            <td>
             <%= post.place %> 
            </td>
            <td><%= render "public/likes/btn", post: post %></td>
          </tr>
        </tbody>
        <% end %>
      </table>