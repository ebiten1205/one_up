<main>
<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
<div>
  <%= flash[:notice] %>
</div>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%#= render 'list', book: @book, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h3>投稿一覧<h3>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td>
             <%= link_to customer_path(post.customer.id) do %>
             <%#= image_tag book.user.get_profile_image(80, 80) %>
             <% end %> 
            </td>
            <td>
             <%#= link_to book.title, book_path(book) %>
            </td>
            <td>
             <%#= book.body %> 
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
</main>

<% @posts.each do |post| %>
  <p><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>
<% end %>