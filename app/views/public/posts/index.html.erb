<main>
<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
<div>
  <%= flash[:notice] %>
</div>
<%#= render partial: "public/customers/info", locals: {customer: current_customer }%>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%#= render 'list', book: @book, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h3>投稿一覧<h3>
      <%= render 'index', posts: @posts%>
    </div>
  </div>
</div>
</main>