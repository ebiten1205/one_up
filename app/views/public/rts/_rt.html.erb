<%= link_to "リツイート", retweets_path(post_id: @post.id), method: :post %>






<%# if customer_signed_in? %>
  <%# unless post.customer.id == current_customer.id %>
    <%# if current_customer.reposted?(post.id) %>
      <%#= link_to "/posts/#{post.id}/rts/#{post.rts.ids}", method: :delete, title: "リポストを取り消す", remote: true do %>
        <i class="fas fa-retweet post-action__repost--reposted"></i>
        <%#= post.rts.length %>
      <%# end %>
    <%# else %>
      <%#= link_to "/posts/#{post.id}/rts", method: :post, title: "リポストする", data: {confirm: "この投稿をリポストしますか？"}, remote: true do %>
        <i class="fas fa-retweet"></i>
      <%# end %>
      <%#= post.rts.length %>
    <%# end %>
  <%# else %>
    <i class="fas fa-retweet nonactive"></i>
    <%#= post.rts.length %>
  <%# end %>
<%# else %>
  <i class="fas fa-retweet nonactive"></i>
  <%#= post.rts.length %>
<%# end %>